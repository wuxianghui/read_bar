<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_marginTop="10sp" android:gravity="center_vertical|center_horizontal" >
 
      <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="fill_parent" android:layout_height="wrap_content"

android:scrollbars="vertical" android:fadingEdge="vertical" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/id_l_basic" android:background="@color/bg_orange">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" android:background="@color/title_background_light_green">
          
          
    <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="昵称"></TextView>
    <EditText android:id="@+id/id_e_name" style="@style/edit_text_register" ></EditText>
    </LinearLayout>
          <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="年龄"></TextView>
    <EditText android:id="@+id/id_e_age" style="@style/edit_text_register" android:inputType="number"></EditText>
    </LinearLayout>
    
         <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="性别"></TextView>
    <EditText android:id="@+id/id_e_sex" style="@style/edit_text_register"></EditText>
    </LinearLayout>
    
      <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="住址" ></TextView>
    <EditText android:id="@+id/id_e_address" style="@style/edit_text_register"></EditText>
    </LinearLayout>
          <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="院校"></TextView>
    <EditText android:id="@+id/id_e_school" style="@style/edit_text_register"></EditText>
    </LinearLayout>
    
    <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register"  android:text="职业"></TextView>
    <EditText android:id="@+id/id_e_job" style="@style/edit_text_register"></EditText>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <TextView style="@style/text_view_register"  android:text="个人说明"></TextView>
    <EditText android:text="输入个人说明"  android:maxLength="300" android:id="@+id/id_e_comments" android:layout_width="match_parent" android:layout_height="160sp" android:gravity="top|left"></EditText>
   </LinearLayout>
   
   <Button
            android:id="@+id/id_b_submit"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="提交"
            android:textColor="#000000" />
    <Button
            android:id="@+id/id_b_cancel"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="取消"
            android:textColor="#000000" />
            
  </LinearLayout>
     
    
    </LinearLayout>
    </ScrollView>
   </LinearLayout>