<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/font_text_grey">
    <TimePicker android:id="@+id/id_tp_time" android:layout_width="wrap_content" android:layout_height="wrap_content"></TimePicker>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <Button android:text="确定" android:id="@+id/id_b_confirm" style="@style/button_user_setting" ></Button>
    <Button android:text="取消" android:id="@+id/id_b_cancel" style="@style/button_user_setting" ></Button>
</LinearLayout>
</LinearLayout>