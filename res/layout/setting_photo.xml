<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_marginTop="10sp" android:gravity="center_vertical|center_horizontal" >
 
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal" android:background="@drawable/setting_photo_bg">
   <TextView android:text="设置头像" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/font_text_black" android:layout_marginTop="10sp"></TextView>
   

   <ImageView android:layout_width="100dip" android:src="@drawable/portry" android:layout_height="160dip"  android:id="@+id/id_img_portry" android:layout_gravity="center"></ImageView>
   <Button
            android:id="@+id/id_b_camera"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            
            android:text="现在拍照"
            android:textColor="#000000" />

    <Button
            android:id="@+id/id_b_fileimage"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            
            android:text="相册选取"
            android:textColor="#000000" />
            
            <Button
            android:id="@+id/id_b_upload"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            
            android:text="上传"
            android:textColor="#000000" />
                        <Button
            android:id="@+id/id_b_cancel"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            
            android:text="取消"
            android:textColor="#000000" />
   
   </LinearLayout>
   </LinearLayout>