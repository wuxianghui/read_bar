<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/title_background_light_green" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout 
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="60sp">
  	<Button android:id="@+id/id_b_logo" android:background="@drawable/logo" android:text="" android:layout_height="40dp" android:layout_width="40dp" android:layout_alignParentLeft="true" android:layout_margin="10sp"></Button>
    <Button android:id="@+id/id_b_register" android:text="注册" android:layout_height="50sp" android:layout_width="80sp" android:layout_alignParentRight="true" android:layout_margin="10sp"></Button>
    </RelativeLayout> 
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" android:background="@color/title_background_light_green">
      <LinearLayout 
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="30sp" android:layout_marginRight="30sp">

    <TextView
        style="@style/text_view_register"
        android:text="@string/phone_number" >
</TextView>
    <EditText android:id="@+id/id_e_email"  style="@style/edit_text_register" android:text="13912988001"></EditText>
    </LinearLayout>

          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="30sp"
              android:layout_marginRight="30sp"
              android:orientation="horizontal" >

    <TextView style="@style/text_view_register"  android:text="@string/password"  ></TextView>
    <EditText android:id="@+id/id_e_password"  style="@style/edit_text_register" android:password="true" android:text="password1"></EditText>
    </LinearLayout>
          <Button android:id="@+id/id_b_login" android:layout_height="50sp" android:text="登录" android:textSize="24sp" android:layout_width="160sp" android:layout_margin="30sp"></Button>
          <CheckBox android:id="@+id/id_ch_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="记住密码" android:textColor="@color/font_text_black" android:textSize="18sp"></CheckBox>
          <CheckBox android:id="@+id/id_ch_dynamic_login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="自动登录" android:textColor="@color/font_text_black" android:textSize="18sp"></CheckBox>
</LinearLayout>
</LinearLayout>
