<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/title_background_light_green">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:background="@color/title_background_light_green">
    
  <Button android:id="@+id/id_b_tech_class" android:text="技能类别" android:layout_height="50sp" android:layout_width="80sp" android:layout_alignParentRight="true" android:layout_margin="10sp"></Button>
  <Button android:id="@+id/id_b_teach_study" android:text="教与学" android:layout_height="50sp" android:layout_width="80sp" android:layout_alignParentRight="true" android:layout_margin="10sp"></Button>
  <Button android:id="@+id/id_b_search" android:text="搜索" android:layout_height="50sp" android:layout_width="80sp" android:layout_alignParentRight="true" android:layout_margin="10sp"></Button>
 
    
    </LinearLayout>
      <ListView
  	android:id="@+id/id_list_tech_listview"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_weight="1"     
    android:scrollbars="vertical"
    android:fadingEdge="none"   
    android:fadingEdgeLength="0dip"
    android:divider="@color/divider_line"
	android:cacheColorHint="#00000000"
  	/>
</LinearLayout>
