<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_marginTop="10sp" android:gravity="center_vertical|center_horizontal" >
 
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal" android:background="@drawable/setting_photo_bg">
   <TextView android:text="设置个性签名" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/font_text_black" android:layout_marginTop="10sp"></TextView>
   <EditText android:text="输入个人说明"  android:maxLength="300" android:id="@+id/id_e_signature" android:layout_width="match_parent" android:layout_height="160sp" android:gravity="top|left" android:layout_margin="10sp"></EditText>


            
   <Button
            android:id="@+id/id_b_submit"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="提交"
            android:textColor="#000000" />
    <Button
            android:id="@+id/id_b_cancel"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="取消"
            android:textColor="#000000" />
   
   </LinearLayout>
   </LinearLayout>