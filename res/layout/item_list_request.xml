<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" android:background="@color/title_background_light_green">
  
  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left" android:background="@color/title_background_light_green">
  <TextView 
  	android:id="@+id/id_tv_user"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textColor="@color/black_end"         
    android:singleLine="true"      
    android:ellipsize="end"    
  	android:textSize="18sp" 
  	android:text="预约人"
  	android:paddingLeft="20dp"
  	/>
  	 <TextView 
  	android:id="@+id/id_tv_tech"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textColor="@color/black_end"         
    android:singleLine="true"      
    android:ellipsize="end"    
  	android:textSize="18sp" 
  	android:text="预约技能"
  	/>


  </LinearLayout>
  
  
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left" android:background="@color/title_background_light_green">
  <TextView 
  	android:id="@+id/id_tv_status"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textColor="@color/black_end"         
    android:singleLine="true"      
    android:ellipsize="end"    
  	android:textSize="18sp" 
  	android:text="未处理"
  	android:paddingLeft="20dp"
  	/>
  	 <TextView 
  	android:id="@+id/id_tv_time"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textColor="@color/black_end"         
    android:singleLine="true"      
    android:ellipsize="end"    
  	android:textSize="18sp" 
  	android:text="2013.04.05 14:00"
  	/>
  	</LinearLayout>
  	
  	 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left" android:background="@color/title_background_light_green">
  <TextView 
  	android:id="@+id/id_tv_status"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textColor="@color/black_end"         
    android:singleLine="true"      
    android:ellipsize="end"    
  	android:textSize="18sp" 
  	android:text="2013.04.05 14:00"
  	android:paddingLeft="20dp"
  	/>
  	
  	</LinearLayout>
  	
</LinearLayout>
