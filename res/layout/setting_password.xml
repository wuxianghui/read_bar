<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_marginTop="10sp" android:gravity="center_vertical|center_horizontal" >
 
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal" android:background="@drawable/setting_photo_bg">
   <TextView android:text="设置密码" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/font_text_black" android:layout_marginTop="10sp"></TextView>
<LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register" android:text="旧密码"></TextView>
    
    <EditText android:id="@+id/id_e_password_old" style="@style/edit_text_register"></EditText>

    </LinearLayout>

       <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register" android:text="新密码"></TextView>
    
    <EditText android:id="@+id/id_e_password_new_1" style="@style/edit_text_register"></EditText>

    </LinearLayout>
    
     <LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"  	
  	 android:layout_marginLeft="20sp" android:layout_marginRight="20sp">
    <TextView style="@style/text_view_register" android:text="重新输入一遍"></TextView>
    
    <EditText android:id="@+id/id_e_password_new_2" style="@style/edit_text_register"></EditText>

    </LinearLayout>
            
   <Button
            android:id="@+id/id_b_submit"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="提交"
            android:textColor="#000000" />
    <Button
            android:id="@+id/id_b_cancel"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="取消"
            android:textColor="#000000" />
   
   </LinearLayout>
   </LinearLayout>